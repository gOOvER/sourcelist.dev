{
    "name": "sourcelist.dev",
    "version": "1.0.0",
    "description": "Modern Sources List Generator - A web application to generate sources.list files for Debian and Ubuntu systems",
    "main": "src/index.js",
    "engines": {
        "node": ">=24.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "build": "webpack --config webpack.config.js --mode production",
        "build:dev": "webpack --config webpack.config.js --mode development",
        "dev": "webpack-dev-server --config webpack.config.js --mode development",
        "start": "npm run dev",
        "preview": "npm run build && npx serve public",
        "test": "echo \"No tests specified\" && exit 0",
        "lint": "echo \"No linting specified\" && exit 0",
        "clean": "rimraf public/bundle.js public/bundle.js.map",
        "node-check": "node --version && npm --version",
        "deploy": "npm run build && echo 'Build completed! Upload public/ folder to Cloudflare Pages'",
        "deploy:wrangler": "npm run build && wrangler pages deploy public --project-name=sourcelistdev"
    },
    "keywords": ["debian", "ubuntu", "sources", "list", "generator", "apt", "repository"],
    "author": "sourcelist.dev",
    "license": "MIT",
    "dependencies": {
        "i18next": "^25.6.0",
        "i18next-browser-languagedetector": "^8.2.0",
        "i18next-http-backend": "^3.0.2"
    },
    "devDependencies": {
        "webpack": "^5.102.1",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.2.0",
        "rimraf": "^6.0.1",
        "serve": "^14.2.4"
    }
}
